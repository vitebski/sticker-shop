{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/index.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/backend/api/index.js"
    }
  ],
  "functions": {
    "backend/api/index.js": {
      "memory": 1024,
      "maxDuration": 15
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Connection",
          "value": "keep-alive"
        },
        {
          "key": "Keep-Alive",
          "value": "timeout=5, max=1000"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
